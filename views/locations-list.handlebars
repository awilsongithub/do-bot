<div class="row page-header">
    <div class="col-lg-12">
      <h1>{{pageHeader.title}}
        <small>&nbsp;{{pageHeader.strapline}}</small>
      </h1>
    </div>
</div>

<div class="row">

  {{! column with each location listing }}
  <div class="col-xs-12 col-sm-8">
    <div class="error">
      {{message}}
    </div>
    <div class="row">

      {{!  ITERATE LOCATION OBJECTS ARRAY HERE }}

      {{#each locations}}
        <div class="col-xs-12">
          <div class="panel panel-default">
            <img class="panel-image" src='https://s3-media4.fl.yelpcdn.com/bphoto/K0Mb7ebSa4DRUpEmfDZVuw/90s.jpg' alt="" />
            <h4>
              <a href="/location/{{_id}}">{{name}}</a>

              <span class='badge pull-right badge-default'>{{distance}}</span>
            </h4>
            <small>&nbsp;TODO add rating helper....</small>
            <p class='address'>{{address}}</p>
            <p>
              {{#each facilities}}
                <span class='label'>{{this}}&nbsp;</span>
              {{/each}}
            </p>
          </div>
        </div>
      {{/each}}

    </div>
  </div>

  {{! column full width xs, 4 wide small and up on right side }}
  <div class="col-xs-12 col-sm-4">
    <p class="lead">{{sidebar}}</p>
  </div>

</div>












