extends layout

// include (require) mixins file 
include _includes/sharedHTMLfunctions

block content

  // HEADER, RATING, ADDRESS 
  .row.page-header
    .col-lg-12
      h1= pageHeader.title
  .row
    .col-xs-12.col-md-9
      .row
        .col-xs-12.col-md-6
          p.rating
            // RATING STARS MIXIN 
            +outputRating(location.rating)
          p= location.address 
          
            // HOURS PANEL 
            .panel.panel-primary
              .panel-heading
                h2.panel-title Opening hours
              .panel-body
                each time in location.openingTimes
                  p
                    | #{time.days} :
                    if time.closed
                      | closed
                    else
                      | #{time.opening} - #{time.closing}
            
            // FACILITIES PANEL 
            .panel.panel-primary
              .panel-heading
                h2.panel-title Facilities
              .panel-body
                each facility in location.facilities
                  span.label.label-warning
                  span.glyphicon.glyphicon-ok
                  | &nbsp;#{facility}
                | &nbsp;
              
        // MAP PANEL       
        .col-xs-12.col-sm-6.location-map
          .panel.panel-primary
            .panel-heading
              h2.panel-title Location map
            .panel-body
              img.img-responsive.img-rounded(src='http://maps.googleapis.com/maps/api/staticmap?center=#{location.coords.lat}, #{location.coords.lng}&zoom=17&size=400x350&sensor=false&markers=#{location.coords.lat}, #{location.coords.lng}&scale=2')
      
      // REVIEWS PANEL       
      .row
        .col-xs-12
          .panel.panel-primary.review-panel
            .panel-heading
              a.btn.btn-default.pull-right(href='/location/review/new') Add review
              h2.panel-title Customer reviews
            .panel-body.review-container
              
              // EACH REVIEW LOOP 
              each review in location.reviews
                .row
                  .review
                    .well.well-sm.review-header
                      span.rating
                        +outputRating(location.rating)
                      span.reviewAuthor #{review.author}
                      small.reviewTimestamp
                        // mixin turns date into user friendly text
                        +formatDate(review.createdOn)
                  .col-xs-12
                    p !{(review.reviewText).replace(/\n/g, '<br/>')}
          
    // SIDEBAR CONTENT                           
    .col-xs-12.col-md-3
      p.lead #{location.name} #{sidebar.context} 
      p= sidebar.callToAction
