// mixins

// outputs star glyphicons base on numeric rating value 
mixin outputRating(rating)
  // "-" for inline <script>
  - for (var i=1; i<=rating; i++)
    span.glyphicon.glyphicon-star
  - for (i=rating; i<5; i++)
    span.glyphicon.glyphicon-star-empty
    

// JS date methods extract user friendly date data out of dateString 
mixin formatDate(datesString)
  -var date = new Date(datesString);
  -var monthNames = ["January", 'February', 'March', 'April', 'May', 'June', 'July', 'August', 'September', 'October', 'November', 'December'];
  -var d = date.getDate();
  -var m = monthNames[date.getMonth()]; // get month from date string as index
  -var y = date.getFullYear();
  -var output = d + ' ' + m + ' ' + y;
  =output 
